<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<%= f.hidden_field :activity_id, {:value => @current_activity_id} %>

   <div class="field">
  
    <%= label_tag :activity_name %>
    <%= text_field_tag 'activity_name', "#{@current_activity}", :disabled => true %>
   
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at,
    :minute_step => 5 %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at,
    :minute_step => 5 %>
  </div>
  <div class="actions">
    <%= f.submit "SAVE EVENT", :class => "nextbutton1" %>
  </div>
 
<% end %>
